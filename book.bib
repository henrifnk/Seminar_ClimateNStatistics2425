	journal = {Global Change Biology},
	author = {Sitch, S. and Huntingford, C. and Gedney, N. and LEVY, P. E. and Lomas, M. and Piao, S. L. and Betts, R. and Ciais, P. and Cox, P. and Friedlingstein, P. and Jones, C. D. and Prentice, I. C. and Wood, F. I.},
