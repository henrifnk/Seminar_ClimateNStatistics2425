   journal = {Scientific Reports 2024 15:1},
   keywords = {Flood frequency analysis,Hierarchical archimedean copula,Hydrology,Joint return period,Natural hazards},
   month = {1},
   pages = {1-16},
   publisher = {Nature Publishing Group},
   title = {A copula-based multivariate flood frequency analysis under climate change effects},
